<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".UserPageActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/answer_attr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="１個目の答え"/>
    <EditText
        android:id="@+id/answer_attr_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/answer_attr_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:text=""
        android:hint="こたえ"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:background="@drawable/search_edit_text_custmiz"/>

</androidx.constraintlayout.widget.ConstraintLayout>