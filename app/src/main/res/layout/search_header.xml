<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    tools:context=".UserPageActivity"
    android:background="@color/white">


    <ImageView
        android:id="@+id/search_header_my_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/search_header_back_button"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:text="＜"/>
    <EditText
        android:id="@+id/search_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/search_header_my_image"
        app:layout_constraintRight_toLeftOf="@+id/search_header_new_posting_butottn"
        app:layout_constraintTop_toTopOf="@+id/search_header_my_image"
        app:layout_constraintBottom_toBottomOf="@+id/search_header_my_image"
        android:gravity="center_horizontal"
        android:hint="検索"
        android:text=""
        android:inputType="text"
        android:textColor="#FF6633"
        android:textSize="14sp"
        android:background="@drawable/search_edit_text_custmiz"/>
    <TextView
        android:id="@+id/search_header_new_posting_butottn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/search_header_my_image"
        app:layout_constraintBottom_toBottomOf="@+id/search_header_my_image"
        app:layout_constraintRight_toRightOf="parent"
        android:text="▽"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center_horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>