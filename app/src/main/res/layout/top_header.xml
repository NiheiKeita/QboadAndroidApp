<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    tools:context=".UserPageActivity"
    android:background="@color/white">


    <ImageView
        android:id="@+id/top_header_my_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <LinearLayout
        android:id="@+id/follow_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:layout_constraintLeft_toRightOf="@+id/top_header_my_image"
        app:layout_constraintRight_toLeftOf="@+id/top_header_new_posting_butottn"
        app:layout_constraintTop_toTopOf="@+id/top_header_my_image"
        app:layout_constraintBottom_toBottomOf="@+id/top_header_my_image"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_follow_top_button"
            android:text="フォロー"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tab_recommendation_top_button"
            android:text="おすすめ"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/top_header_new_posting_butottn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@+id/top_header_my_image"
        app:layout_constraintBottom_toBottomOf="@+id/top_header_my_image"
        app:layout_constraintRight_toRightOf="parent"
        android:text="+"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center_horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>