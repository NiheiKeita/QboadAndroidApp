<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPageActivity">

    <TextView
        android:id="@+id/user_page_back_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="＜"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/user_page_back_button"
        app:layout_constraintBottom_toBottomOf="@+id/user_page_back_button"
        android:gravity="center_horizontal"
        android:text="QBoad"
        android:textColor="#FF6633"
        android:textSize="20sp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/user_page_back_button"
        app:layout_constraintBottom_toTopOf="@+id/footer_menu">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_page_my_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/sample_nihei_icon"/>
            <TextView
                android:id="@+id/user_page_my_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/user_page_my_image"
                app:layout_constraintLeft_toLeftOf="@+id/user_page_my_image"
                app:layout_constraintRight_toRightOf="@+id/user_page_my_image"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:text="nihei"/>
            <TextView
                android:id="@+id/user_posting_count"
                app:layout_constraintLeft_toRightOf="@+id/user_page_my_image"
                app:layout_constraintRight_toLeftOf="@+id/user_like_count"
                app:layout_constraintTop_toTopOf="@+id/user_page_my_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="1"/>
            <TextView
                android:id="@+id/user_posting_count_text"
                app:layout_constraintRight_toRightOf="@+id/user_posting_count"
                app:layout_constraintLeft_toLeftOf="@+id/user_posting_count"
                app:layout_constraintTop_toBottomOf="@+id/user_posting_count"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:text="投稿"/>
            <TextView
                android:id="@+id/user_like_count"
                app:layout_constraintLeft_toRightOf="@+id/user_posting_count"
                app:layout_constraintRight_toLeftOf="@+id/user_posting_answer_count"
                app:layout_constraintTop_toTopOf="@+id/user_posting_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="1"/>
            <TextView
                android:id="@+id/user_like_count_text"
                app:layout_constraintRight_toRightOf="@+id/user_like_count"
                app:layout_constraintLeft_toLeftOf="@+id/user_like_count"
                app:layout_constraintTop_toBottomOf="@+id/user_like_count"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:text="いいね"/>
            <TextView
                android:id="@+id/user_posting_answer_count"
                app:layout_constraintLeft_toRightOf="@+id/user_like_count"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_posting_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="1"/>
            <TextView
                android:id="@+id/user_posting_answer_count_text"
                app:layout_constraintRight_toRightOf="@+id/user_posting_answer_count"
                app:layout_constraintLeft_toLeftOf="@+id/user_posting_answer_count"
                app:layout_constraintTop_toBottomOf="@+id/user_posting_answer_count"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:text="解答"/>

            <TextView
                android:id="@+id/user_follower_count"
                app:layout_constraintLeft_toRightOf="@+id/user_page_my_image"
                app:layout_constraintRight_toLeftOf="@+id/user_follow_count"
                app:layout_constraintTop_toTopOf="@+id/user_page_my_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="1"/>
            <TextView
                android:id="@+id/user_follower_count_text"
                app:layout_constraintRight_toRightOf="@+id/user_follower_count"
                app:layout_constraintLeft_toLeftOf="@+id/user_follower_count"
                app:layout_constraintTop_toBottomOf="@+id/user_follower_count"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:text="フォロワー"/>
            <TextView
                android:id="@+id/user_follow_count"
                app:layout_constraintLeft_toRightOf="@+id/user_follower_count"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_page_my_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="1"/>
            <TextView
                android:id="@+id/user_follow_count_text"
                app:layout_constraintRight_toRightOf="@+id/user_follow_count"
                app:layout_constraintLeft_toLeftOf="@+id/user_follow_count"
                app:layout_constraintTop_toBottomOf="@+id/user_follow_count"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:text="フォロー"/>

            <TextView
                android:id="@+id/user_page_my_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/user_page_my_name"
                app:layout_constraintLeft_toLeftOf="@+id/user_page_my_name"
                android:textSize="14sp"
                android:textColor="#444444"
                android:text="\@niheikeitaniheikeita"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/user_page_my_id"
                app:layout_constraintLeft_toRightOf="@+id/user_page_my_id"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="#3399FF"
                android:text="共有"/>
            <include
                android:id="@+id/list_linear"
                layout="@layout/my_user_page_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/user_page_my_id"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:alpha="0.1"
                app:layout_constraintTop_toBottomOf="@+id/list_linear"/>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/user_page_screen_fragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                app:layout_constraintTop_toBottomOf="@+id/list_linear"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <include
        android:id="@+id/footer_menu"
        layout="@layout/footer_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>